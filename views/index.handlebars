<h1>Eat De Burger!</h1>

<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
	<li>
		{{this.id}}: {{this.burger_name}}
		<button data-id="{{this.id}}" class="devourButton">Devour It!</button>
	</li>
	{{/unless}}
	{{/each}}
</ul>
<hr>
<ul>
	{{#each burgers}}
	{{#if this.devoured}}
	<li>
		{{this.burger_name}}
	</li>
	{{/if}}
	{{/each}}
</ul>


<form id="newBurger">
	<textarea type="text" name="burgerName" id="burgerName"></textarea>
	<button type="submit">Add Burger</button>
</form>